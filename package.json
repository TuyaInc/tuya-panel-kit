{
  "name": "@tuya-rn/tuya-native-kit",
  "version": "2.0.1",
  "private": false,
  "description": "tuya-react-kit, is a wrapper of native api & module",
  "source": "./src/index.js",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "scripts": {
    "build": "rimraf dist/* && rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:android": "export RN_JEST_PLATFORM='android' && yarn test",
    "commit": "git-cz",
    "release:major:pre": "yarn build && standard-version --release-as major --prerelease rc --skip.changelog=true --skip.tag=true",
    "release:major": "yarn build && standard-version --release-as major",
    "release:minor:pre": "yarn build && standard-version --release-as minor --prerelease rc --skip.changelog=true --skip.tag=true",
    "release:minor": "yarn build && standard-version --release-as minor",
    "release:patch:pre": "yarn build && standard-version --release-as patch --prerelease rc --skip.changelog=true --skip.tag=true",
    "release:patch": "yarn build && standard-version --release-as patch"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "./node_modules/replace/bin/replace.js 'http://code.registry.wgine.com:10023/TuyaRN/tuya-native-kit/commits/' '' CHANGELOG.md && ./node_modules/replace/bin/replace.js http://code.registry.wgine.com:10023/ http://code.registry.wgine.com/ CHANGELOG.md"
    }
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-native": "^0.51.0"
  },
  "contributors": [
    "fri3nds<chenglong@tuya.com>",
    "cris<wanghuan@tuya.com>",
    "toki<liuyt@tuya.com>"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@tuya-rn/tuya-native-lint": "1.0.0",
    "commitizen": "^3.0.5",
    "cz-customizable": "^5.3.0",
    "husky": "^1.3.1",
    "jest": "^26.4.2",
    "lint-staged": "^8.1.4",
    "node-fetch": "^2.6.1",
    "prettier": "^1.16.4",
    "replace": "^1.0.1",
    "rollup": "^2.33.1",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^8.0.1"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "<rootDir>/src/api/*.js",
      "<rootDir>/src/i18n/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/api/__tests__/utils",
      "/src/i18n/__tests__/utils"
    ]
  }
}
