{
  "name": "@tuya-rn/tuya-native-kit",
  "version": "1.1.5",
  "private": false,
  "description": "tuya-react-kit, is a wrapper of native api & module",
  "main": "./src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz",
    "release:major:pre": "standard-version --release-as major --prerelease rc --skip.changelog=true --skip.tag=true",
    "release:major": "standard-version --release-as major",
    "release:minor:pre": "standard-version --release-as minor --prerelease rc --skip.changelog=true --skip.tag=true",
    "release:minor": "standard-version --release-as minor",
    "release:patch:pre": "standard-version --release-as patch --prerelease rc --skip.changelog=true --skip.tag=true",
    "release:patch": "standard-version --release-as patch"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "./node_modules/replace/bin/replace.js 'http://code.registry.wgine.com:10023/TuyaRN/tuya-native-kit/commits/' '' CHANGELOG.md && ./node_modules/replace/bin/replace.js http://code.registry.wgine.com:10023/ http://code.registry.wgine.com/ CHANGELOG.md"
    }
  },
  "dependencies": {
    "moment": "^2.20.1",
    "prop-types": "^15.6.1",
    "react": "16.0.0",
    "react-native": "0.51.0",
    "react-native-deprecated-custom-components": "git+https://github.com/facebookarchive/react-native-custom-components.git#83c4fa19ccc9b6cd48ff80e457c493332819b486",
    "rn-fetch-blob": "^0.11.2"
  },
  "author": [
    "fri3nds<chenglong@tuya.com>",
    "cris<wanghuan@tuya.com>",
    "toki<liuyt@tuya.com>"
  ],
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@tuya-rn/tuya-native-lint": "1.0.0",
    "commitizen": "^3.0.5",
    "cz-customizable": "^5.3.0",
    "husky": "^1.3.1",
    "jest": "^22.1.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "replace": "^1.0.1",
    "standard-version": "^4.4.0"
  }
}
